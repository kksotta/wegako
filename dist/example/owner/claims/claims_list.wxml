<!--example/owner/claims/claims_list.wxml-->
<view class="page">
  <view class="fullbg {{isfull ?'fullopacity':''}}" bindtap="hidebg"></view>
  <view class="fix_top">
    <view class="page__bd_spacing profile_nav" style="position:relative;z-index:1;" bindtap="listpay" data-nav="1">
      <view class="weui-flex p100" style="line-height:3em;">
        <view class="weui-flex__item">申报年份</view>
        <view class="weui-flex gray">全部
          <view class="weui-nav-select" style="padding-right:20px;"></view>
        </view>
      </view>
    </view>
    <view class="weui-flex__item gray_bg {{payopen ? 'slidown' : 'slidup'}}">
      <view class="weui-cell">全部</view>
      <view class="weui-cell">本年</view>
      <view class="weui-cell">2016年</view>
      <view class="weui-cell">2015年</view>
    </view>
  </view>
  <view class="page__bd page__bd_spacing" style="margin-top:2.8em;">
    <navigator class="kind-list__item l15" url="claims_detail">
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <view class="weui-label">申报状态</view>
        </view>
        <view class="weui-cell__bd">
          <view class="red">申报中</view>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <view class="weui-label">车牌号</view>
        </view>
        <view class="weui-cell__bd">
          <view class="gray">沪B37778</view>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <view class="weui-label">事故日期</view>
        </view>
        <view class="weui-cell__bd">
          <view class="gray">2016-04-20</view>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <view class="weui-label">报赔金额</view>
        </view>
        <view class="weui-cell__bd">
          <view class="red">2000元</view>
        </view>
      </view>
    </navigator>
    <navigator class="kind-list__item l15" url="claims_detail1">
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <view class="weui-label">申报状态</view>
        </view>
        <view class="weui-cell__bd">
          <view class="green">已赔付</view>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <view class="weui-label">车牌号</view>
        </view>
        <view class="weui-cell__bd">
          <view class="gray">沪B37778</view>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <view class="weui-label">事故日期</view>
        </view>
        <view class="weui-cell__bd">
          <view class="gray">2016-04-20</view>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <view class="weui-label">报赔金额</view>
        </view>
        <view class="weui-cell__bd">
          <view class="gray">2000元</view>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <view class="weui-label">实际赔款</view>
        </view>
        <view class="weui-cell__bd">
          <view class="red">2000元</view>
        </view>
      </view>
    </navigator>
  </view>
</view>