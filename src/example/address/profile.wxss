/* example/address/profile.wxss */
.profile_top{    
    background:#50cae4;
    width:100%;
    height:5.5em;
    padding-top:.5em;
    text-align: center;
    vertical-align: middle;
}
.profile_head{
    position: relative;
    width: 4.3em;
    height: 4.3em;
    margin: 0 auto;
}
.profile_sex{
    position: absolute;
    width:1.2em;
    height:1.2em;
    bottom:0;
    right:0;
}
.profile_nav{
    text-align: center;
    height: 2.3em;
    line-height: 2.3em;
}
.profile_nav_on{
    border-bottom:#50cae4 3px solid;
}