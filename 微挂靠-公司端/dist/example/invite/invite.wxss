.invite_flex{
    position: relative;
    width:76%;
    height:24em;  
    margin:2em auto 0;
    padding-top:2em;
    background:#ffffff;
    border:1px solid #eeeeee;
    border-radius:6px;
    text-align: center;
}
.invite_tape{
    position: absolute;
    width: 100%;
    background: url(../images/icon_tape.png) no-repeat 100% 100%;
    margin: 0 auto;
    text-align: center;
    background-size:94% auto;
    padding:.3em 0 .7em 0;
    color: #ffffff;
    font-size: 1em;
    background-position:center;
    top:20em;
}
.invite_code{   
    width:13em;
    height:13em;
    padding: .7em;
    border: 1px solid #50cae4;
    border-radius:6px;
}