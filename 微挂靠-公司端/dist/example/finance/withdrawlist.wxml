<!--example/finance/withdrawlist.wxml-->
<view class="page">
    <view class="fullbg {{isfull ?'fullopacity':''}}" bindtap="hidebg"></view>
    <view class="fix_top">
        <view class="page__bd_spacing profile_nav" style="position:relative;z-index:1;" bindtap="listpay" data-nav="1">
            <view class="weui-flex p100" style="line-height:3em;">
                <view class="weui-flex__item">提现年份</view>
                <view class="weui-flex gray">全部<view class="weui-nav-select" style="padding-right:20px;"></view></view>
            </view>
        </view>
        <view class="weui-flex__item gray_bg {{payopen ? 'slidown' : 'slidup'}}">
            <view class="weui-cell">全部</view>
            <view class="weui-cell">本年</view>
            <view class="weui-cell">2016年</view>
            <view class="weui-cell">2015年</view>
        </view>
    </view>
    <view class="weui-cell" style="margin-top:3em;">
        成功提现：<text class="green">109,800元</text>
    </view>
    <view class="weui-post">
        <view class="weui-cell">
            <view class="weui-flex__item col">
                <view>21,000元</view><view class="f12 gray">2016-09-13 15:23:15</view>
            </view>
            <view class="green">成功</view>
        </view>
        <view class="weui-cell">
            <view class="weui-flex__item col">
                <view>21,000元</view><view class="f12 gray">2016-09-13 15:23:15</view>
            </view>
            <view class="red">失败</view>
        </view>
        <view class="weui-cell">
            <view class="weui-flex__item col">
                <view>21,000元</view><view class="f12 gray">2016-09-13 15:23:15</view>
            </view>
            <view class="red">提现中</view>
        </view>
    </view>
</view>