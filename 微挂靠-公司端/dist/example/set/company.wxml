<view class="page">
    <view class="page__bd">
        <view class="weui-post">
            <block wx:for="{{company}}" wx:for-index="i">
                <view class="weui-cell" data-i="{{i}}" bindtap="open" >
                    <view class="weui-flex__item">上海发财运输公司</view>
                    <view><image src="../images/icon_modify.png" class="more"></image></view>
                </view>
            </block>
        </view>
    </view>
    <view class="weui-footer_fixed-bottom weui-footer">
        <navigator url="addcomp" class="weui-cell_access">+添加挂靠公司</navigator>
    </view>
</view>